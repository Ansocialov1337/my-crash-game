    <div class="game-container">
        <div class="header">
            <div>
                <div style="color: #666; font-size: 0.9em;">–ë–∞–ª–∞–Ω—Å</div>
                <div class="balance" id="balance">1000.00 ‚ÇΩ</div>
            </div>
            <div>
                <div style="color: #666; font-size: 0.9em;">–ò–≥—Ä</div>
                <div style="font-size: 1.2em; font-weight: bold;" id="games">0</div>
            </div>
        </div>
        
        <div class="game-area">
            <div class="rocket">üöÄ</div>
            <div class="multiplier" id="multiplier">1.00x</div>
            <div class="status waiting" id="status">–°–¥–µ–ª–∞–π—Ç–µ —Å—Ç–∞–≤–∫—É</div>
        </div>
        
        <div class="controls">
            <div class="input-group">
                <label for="bet-amount">–°—É–º–º–∞ —Å—Ç–∞–≤–∫–∏ (‚ÇΩ)</label>
                <input type="number" id="bet-amount" value="100" min="10" step="10">
            </div>
            
            <button class="btn btn-primary" id="bet-btn" onclick="placeBet()">
                üé≤ –°–¥–µ–ª–∞—Ç—å —Å—Ç–∞–≤–∫—É
            </button>
            
            <button class="btn btn-success" id="cashout-btn" onclick="cashout()" style="display: none;">
                üí∞ –ó–∞–±—Ä–∞—Ç—å –≤—ã–∏–≥—Ä—ã—à
            </button>
        </div>
    </div>
    
    <script>
        let tg = window.Telegram.WebApp;
        tg.expand();
        
        let gameState = 'waiting'; // waiting, playing, finished
        let currentMultiplier = 1.00;
        let betAmount = 0;
        let gameInterval = null;
        let crashPoint = 0;
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        function init() {
            updateBalance(1000);
            updateGames(0);
        }
        
        function updateBalance(amount) {
            document.getElementById('balance').textContent = amount.toFixed(2) + ' ‚ÇΩ';
        }
        
        function updateGames(count) {
            document.getElementById('games').textContent = count;
        }
        
        function updateMultiplier(value) {
            document.getElementById('multiplier').textContent = value.toFixed(2) + 'x';
        }
        
        function updateStatus(text, className) {
            const status = document.getElementById('status');
            status.textContent = text;
            status.className = 'status ' + className;
        }
        
        function placeBet() {
            betAmount = parseFloat(document.getElementById('bet-amount').value);
            
            if (betAmount < 10) {
                tg.showAlert('–ú–∏–Ω–∏–º–∞–ª—å–Ω–∞—è —Å—Ç–∞–≤–∫–∞ 10‚ÇΩ');
                return;
            }
            
            // –ù–∞—á–∏–Ω–∞–µ–º –∏–≥—Ä—É
            gameState = 'playing';
            currentMultiplier = 1.00;
            crashPoint = (Math.random() * 9 + 1).toFixed(2); // –û—Ç 1.00 –¥–æ 10.00
            
            document.getElementById('bet-btn').style.display = 'none';
            document.getElementById('cashout-btn').style.display = 'block';
            document.getElementById('bet-amount').disabled = true;
            
            updateStatus('–ò–≥—Ä–∞ –Ω–∞—á–∞–ª–∞—Å—å!', 'playing');
            
            // –ê–Ω–∏–º–∞—Ü–∏—è –º–Ω–æ–∂–∏—Ç–µ–ª—è
            gameInterval = setInterval(() => {
                currentMultiplier += 0.01;
                updateMultiplier(currentMultiplier);
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫—Ä–∞—à–∞
                if (currentMultiplier >= crashPoint) {
                    crash();
                }
            }, 100);
        }
        
        function cashout() {
            if (gameState !== 'playing') return;
            
            clearInterval(gameInterval);
            gameState = 'finished';
            
            const winAmount = (betAmount * currentMultiplier).toFixed(2);
            
            document.getElementById('cashout-btn').style.display = 'none';
            document.getElementById('bet-btn').style.display = 'block';
            document.getElementById('bet-amount').disabled = false;
            
            updateStatus(`–í—ã –≤—ã–∏–≥—Ä–∞–ª–∏ ${winAmount}‚ÇΩ!`, 'won');
            
            setTimeout(() => {
                gameState = 'waiting';
                updateStatus('–°–¥–µ–ª–∞–π—Ç–µ —Å—Ç–∞–≤–∫—É', 'waiting');
                updateMultiplier(1.00);
            }, 3000);
        }
        
        function crash() {
            clearInterval(gameInterval);
            gameState = 'finished';
            
            document.getElementById('cashout-btn').style.display = 'none';
            document.getElementById('bet-btn').style.display = 'block';
            document.getElementById('bet-amount').disabled = false;
            
            updateStatus(`üí• –ö—Ä–∞—à –Ω–∞ ${currentMultiplier.toFixed(2)}x! –í—ã –ø—Ä–æ–∏–≥—Ä–∞–ª–∏ ${betAmount}‚ÇΩ`, 'lost');
            
            setTimeout(() => {
                gameState = 'waiting';
                updateStatus('–°–¥–µ–ª–∞–π—Ç–µ —Å—Ç–∞–≤–∫—É', 'waiting');
                updateMultiplier(1.00);
            }, 3000);
        }
        
        // –ó–∞–ø—É—Å–∫ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        init();
    </script>
